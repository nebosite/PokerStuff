<UserControl x:Class="PokerOdds.CardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PokerOdds"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="30">
    <Border CornerRadius="5" Background="White" BorderThickness="1" BorderBrush="Black">
     <Grid>
            <StackPanel Orientation="Horizontal">
                <Label Content="A" FontSize="18" FontFamily="Times New Roman" FontWeight="Bold" Foreground="Red" Padding="0" />
                <Label Content="©" FontSize="22" FontFamily="Symbol" FontWeight="Bold" Foreground="Red" Padding="0" Margin="-4,-6" />

            </StackPanel>
        </Grid>
       
    </Border>
</UserControl>
