<UserControl x:Class="OddsMaster.OddsTableCellControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OddsMaster"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance local:DummyOddsItem, IsDesignTimeCreatable=True}"
             d:DesignHeight="20" d:DesignWidth="40">
    <Grid Background="{Binding VisibleColor}">
        <TextBlock Text="{Binding VisibleText}" FontSize="18"  Padding="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>

</UserControl>
