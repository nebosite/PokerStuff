<UserControl x:Class="OddsMaster.CardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OddsMaster"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="80">
    <Border CornerRadius="5" Background="White" BorderThickness="1" BorderBrush="Black" Width="80" Height="100">
        <Grid>
            <Label x:Name ="CardRankLabel" Content="A" FontSize="50" FontFamily="Times New Roman" FontWeight="Bold" Foreground="Red" Padding="0" Margin="2,25,0,0" HorizontalContentAlignment="Center" />
            <Label x:Name="CardSuitLabel" Content="©" FontSize="40" FontFamily="Symbol" FontWeight="Bold" Foreground="Red" Padding="0" Margin="4,-9,0,0" Height="43" VerticalAlignment="Top" HorizontalAlignment="Left" Width="33" />
        </Grid>

    </Border>
</UserControl>
