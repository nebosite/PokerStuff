<UserControl x:Class="OddsMaster.CardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OddsMaster"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="32">
    <Border CornerRadius="5" Background="White" BorderThickness="1" BorderBrush="Black" >
        <Viewbox StretchDirection="Both" Stretch="Uniform">
            <Grid Width="65" Height="76">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name ="CardRankLabel" Text="A" FontSize="50" FontFamily="Times New Roman" FontWeight="Bold" Foreground="Red" Padding="0" Margin="2,25,0,0" TextAlignment="Center" Grid.ColumnSpan="2" />
                <TextBlock x:Name="CardSuitLabel" Text="©" FontSize="40" FontFamily="Symbol" FontWeight="Bold" Foreground="Red" Padding="0" Margin="4,-9,0,0" Height="43" VerticalAlignment="Top" HorizontalAlignment="Left" Width="33" />
            </Grid>
        </Viewbox>

    </Border>
</UserControl>
