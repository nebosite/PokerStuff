<UserControl x:Class="OddsMaster.HandControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OddsMaster"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="800">
    <Grid>
        <Viewbox StretchDirection="Both" Stretch="Uniform">
            <StackPanel Orientation="Horizontal" Height="100" Margin="5">
                <Label Content="Your Hand:" />
                <local:CardControl Card="{Binding PocketCard1}" Width="70" Margin="5,0,0,0"/>
                <local:CardControl Card="{Binding PocketCard2}"  Width="70" Margin="5,0,0,0"/>
                <Label Content="  Street:" />
                <local:CardControl Card="{Binding FlopCard1}" Width="70"  Margin="5,0,0,0"/>
                <local:CardControl Card="{Binding FlopCard2}"  Width="70" Margin="5,0,0,0"/>
                <local:CardControl Card="{Binding FlopCard3}"  Width="70" Margin="5,0,0,0"/>
                <local:CardControl Card="{Binding TurnCard}" Width="70" Margin="20,0,0,0" />
                <local:CardControl Card="{Binding RiverCard}" Width="70" Margin="20,0,0,0" />
            </StackPanel>
        </Viewbox>
    </Grid>
</UserControl>
